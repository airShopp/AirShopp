@model AirShopp.UI.Models.ViewModel.ProductListViewModel
@{ var index = 0;double a = Math.Ceiling(((double)Model.productList.Count()) / (double)4);}
@for (int i = 0; i < (Math.Ceiling(((double)Model.productList.Count())/(double)4)); i++)
{
    <ul>
        @for (int j = 0; j < 4; j++)
        {
            if (index < Model.productList.Count())
            {
                <li>
                    <a href="/Product/getProduct?productId=@Model.productList[index].ProductId">
                        <img src="@Model.productList[index].ProductUrl" style="width:230px;height:259px;">
                        @if (Model.productList[index].ProductName.Length > 15)
                        {
                            <p class="head-name">@Model.productList[index].ProductName.Substring(0, 15) </p>
                        }
                        else
                        {
                            <p class="head-name">@Model.productList[index].ProductName </p>
                        }
                    </a>
                    <p><span class="price">￥@Model.productList[index].DiscountPrice</span><span class="discount">￥@Model.productList[index].Price</span></p>
                    <p class="head-futi"> <span>@Model.productList[index].CommentAmount 人评价）</span></p>
                    <p class="label-default">@Model.productList[index].Discounts 折</p>
                </li>
                index++;
            }
        }
    </ul>
}
