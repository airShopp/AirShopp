@model AirShopp.UI.Models.ViewModel.ReturnRequestListViewModel
@{
    ViewBag.Title = "ReturnRequest";
    Layout = "~/Views/Shared/_orderPageLayout.cshtml";

}
<div class="member-right fr">
    <div class="member-head">
        <div class="member-heels fl"><h2>退货申请</h2></div>
    </div>
    @for (int i = 0; i < Model.ReturnRequestViewModelList.Count(); i++)
    {
    
    <div class="member-border">
        <div class="member-newly"><span><b>订单号：</b>@Model.ReturnRequestViewModelList[i].ReturnOrder.OrderId</span> <span><b>订单状态：</b><i class="reds">已申请退款</i></span></div>
        <div class="member-cargo">
            <h3>收货人信息：</h3>
            <p>@Model.ReturnRequestViewModelList[i].Ordrer.Address.ReceiverName</p>
            <p>@Model.ReturnRequestViewModelList[i].Ordrer.Address.ReceiverPhone</p>
            <p>@Model.ReturnRequestViewModelList[i].Ordrer.Address.DeliveryAddress</p>
        </div>
        <div class="member-sheet clearfix">
            <ul>
                <li>
                    <div class="member-circle clearfix">
                        <div class="member-apply clearfix">
                            <div class="ap1 fl">
                                <span class="gr1"><a href="/Product/getProduct?productId=>@Model.ReturnRequestViewModelList[i].OrderItem.Product.Id"><img width="60" height="60" about="" title="" src="@Model.ReturnRequestViewModelList[i].OrderItem.Product.Url"></a></span>
                                <span class="gr2"><a href="/Product/getProduct?productId=>@Model.ReturnRequestViewModelList[i].OrderItem.Product.Id">@Model.ReturnRequestViewModelList[i].OrderItem.Product.ProductName</a></span>
                                <span class="gr3">X @Model.ReturnRequestViewModelList[i].OrderItem.Quantity</span>
                            </div>
                            <div class="ap2 fl"><a href="/Order/OrderDetail?orderId=@Model.ReturnRequestViewModelList[i].ReturnOrder.OrderId">订单详情</a></div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="member-modes clearfix">
            <p class="clearfix"><b>支付方式：</b><em>在线支付</em></p>
        </div>
        <div class="member-modes clearfix">
            <p class="clearfix"><b>配送方式：</b><em> 自营快递</em></p>
        </div>
        <div class="member-modes clearfix">
            <p class="clearfix"><b>商品金额：</b><em> ￥@(Model.ReturnRequestViewModelList[i].OrderItem.DiscountPrice * Model.ReturnRequestViewModelList[i].OrderItem.Quantity)</em></p>
            <p class="clearfix"><b>运费：</b><em> ￥0.00</em></p>
        </div>
        <div class="member-modes clearfix">
            <p class="clearfix"><b>订单合计金额：</b><em> @(Model.ReturnRequestViewModelList[i].OrderItem.DiscountPrice * Model.ReturnRequestViewModelList[i].OrderItem.Quantity)元</em></p>
        </div>
    </div>
    }
    <div class="clearfix" style="padding:30px 20px;">
        <div class="fr pc-search-g pc-search-gs">
            @foreach (var pageNum in Model.pageBar)
            {
                if (pageNum == Model.PageIndex)
                {
                    @Html.ActionLink(pageNum.ToString(), "GetReturnRequest", "Order", new { @class = "current", indexNum = pageNum });
                }
                else if (pageNum == 0)
                {
                    <span class="pc-search-di">…</span>
                }
                else
                {
                    @Html.ActionLink(pageNum.ToString(), "GetReturnRequest", "Order", new { indexNum = pageNum }, new { Target = "_self" });
                }
            }
        </div>
    </div>

</div>


