                                    <div class="ci6 amanda1"><p><a href="#">确认收货</a> </p></div>
                                }
                                @if (Model.AllOrder[i].OrderStatus.Equals("CANCELED"))
                                {
                                    <div class="ci5 amanda1"><p>交易关闭</p> <p><a href="/Order/OrderDetail?orderId=@Model.AllOrder[i].Id">订单详情</a></p></div>
                                    <div class="ci6 amanda1"><p></p></div>
                                }
                            </div>
                        </li>
