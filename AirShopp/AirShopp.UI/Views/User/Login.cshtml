@model AirShopp.UI.Models.ViewModel.UserViewModel
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>立即登录</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/icon/Air.ico">
    @Scripts.Render("~/bundles/AirShopp/Login/js")
    @Styles.Render("~/bundles/AirShopp/Login/Css")
</head>
<body>
    <div class="w">
        <div id="logo">
            <a href="@Url.Action("Index", "Home")">
                <img src="~/Content/icon/AirShoppLogo.png" alt="">
            </a>
            <b></b>
        </div>
        <a href="javascript:void(0)" class="q_link fr">
            <b class="fl"></b>
            登录页面，改进意见
        </a>
    </div>
    <div id="content">
        <div class="login-wrap">
            <div class="w">
                <div class="login-form">
                    <div class="login-tab login-tab-r">
                        <a href="javascript:;">账号登录</a>
                    </div>
                    <div class="login-box" style="visibility: visible; display:block">
                        <div class="mt tab-h"></div>
                        <div class="msg-wrap"></div>
                        <div class="mc">
                            <div class="form">
                                @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "form" }))
                                {
                                    <div class="item item-fore1 item-error">
                                        @Html.ValidationSummary(true)
                                        <label for="loginname" class="login-label name-label"></label>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "itxt", id = "loginname", tabindex = "1", autocomplete = "off", placeholder = "请输入用户名" })
                                        <span class="clear-btn" style="display:inline;"></span>
                                        @Html.ValidationMessageFor(m => m.UserName)
                                    </div>
                                     <!-- 密码输入框fore2 -->
                                    <div id="entry" class="item item-fore2" style="visibility: visible">
                                        <label class="login-label pwd-label" for="nloginpwd"></label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "itxt itxt-error", id = "nloginpwd", placeholder = "请输入密码", tabindex = "2", autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                        <span class="clear-btn" style="display: inline;"></span>
                                        <span class="capslock" style="display: none;">
                                            <b></b>
                                            大小写锁定已打开
                                        </span>
                                    </div>
                                    <!-- 图片验证码开始 fore3-->
                                    <div id="o-authcode" class="item item-vcode item-fore3">
                                        <input type="text" id="authcode" class="itxt itxt02" name="authcode" tabindex="3">
                                        <input type="button" id="code" class="verify-code" onclick='createCode();'>
                                        <a href="javascript:void(0);" onclick='createCode();'>看不清换一张</a>
                                    </div>
                                        <!-- 自动登录开始fore4 -->
                                        <div class="item item-fore4">
                                            <div class="safe">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.RememberPwd, new { @id = "autologin", tabindex = "3", autocomplete = "off" })
                                                    <!--<input type="checkbox" name="chkRememberMe" id="autologin" tabindex="3" style="vertical-align:middle;">-->
                                                    <label for="autologin">自动登录</label>
                                                </span>
                                                <span class="forget-pw-safe">
                                                    <a href="javascript:void(0)">忘记密码</a>
                                                </span>
                                            </div>
                                        </div>
                                        <!-- 登录按钮开始 -->
                                        <div class="item item-fore5">
                                            <div class="login-btn">
                                                <a href="javascript:;" class="btn-img btn-entry" id="loginsubmit" tabindex="6" onClick="validate()">登&nbsp;&nbsp;&nbsp;&nbsp;录</a>
                                            </div>
                                        </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="coagent" id="kbCoagent">
                        <ul>
                            <li class="extra-r">
                                <div class="regist-link">
                                    <a href="/User/Register">
                                        <b></b>立即注册
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="login-banner" style="background-color: #ea4949">
                <div class="w">
                    <div id="banner-bg" class="i-inner" style="background: url(../../Content/login/a1.jpg);"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="w">
        <div id="footer-2013">
            <div class="links">
                <a href="">关于我们</a>
                |
                <a href="">联系我们</a>
                |
                <a href="">人才招聘</a>
                |
                <a href="">商家入驻</a>
                |
                <a href="">广告服务</a>
                |
                <a href="">手机京东</a>
                |
                <a href="">友情链接</a>
                |
                <a href="">销售联盟</a>
                |
                <a href="">English site</a>
            </div>
            <div style="padding-left:10px">
                <p style="padding-top:10px; padding-bottom:10px; color:#999">网络文化经营许可证：浙网文[2013]0268-027号| 增值电信业务经营许可证：浙B2-20080224-1</p>
                <p style="padding-bottom:10px; color:#999">信息网络传播视听节目许可证：1109364号 | 互联网违法和不良信息举报电话:0571-81683755</p>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    createCode();
</script>