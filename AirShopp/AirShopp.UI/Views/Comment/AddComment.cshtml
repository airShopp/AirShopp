@model AirShopp.UI.Models.ViewModel.CommentViewModel
@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_orderPageLayout.cshtml";

}
<div class="member-right fr">
    <div class="member-head">
        <div class="member-heels fl"><h2>我的评价</h2></div>
    </div>
    <div class="member-border">
        <div class="member-column clearfix">
            <span class="co1">商品信息</span>
            <span class="co2">购买时间</span>
            <span class="co3">评价状态</span>
        </div>
        @if (Model.OrderItem != null)
        {
        using (Html.BeginForm("AddComment", "Comment", FormMethod.Post, new { @id = "form" }))
        {
            <input name="productId" value="@Model.OrderItem.ProductId" type="hidden"/>
            <input name="orderItemId" value="@Model.OrderItem.Id" type="hidden" />
        <div class="member-class clearfix">
            <ul>
                <li class="clearfix">
                    <div class="sp1">
                        <span class="gr1"><a href="#"><img width="60" height="60" about="" title="" src="@Model.OrderItem.Product.Url"></a></span>
                        <span class="gr2"><a href="#">@Model.OrderItem.Product.ProductName</a></span>
                        <span class="gr3">X @Model.OrderItem.Quantity</span>
                    </div>
                    <div class="sp2">@Model.OrderDate</div>
                    <div class="sp3"><input type="submit" value="发表评论"></div>
                </li>
            </ul>
        </div>
        <div class="member-setup clearfix">
            <ul>
                <li class="clearfix">
                    <div class="member-score fl"><i class="reds">*</i>商品评价：</div>
                    <div class="member-star fl">
                        <textarea maxlength="200" name="commentStr"></textarea>
                    </div>
                </li>
                @*<li class="clearfix">
                    <div class="member-score fl">晒单：</div>
                    <div class="member-star fl">
                        <a href="#"><img src="~/Content/img/pd/m2.png"></a>
                        <a href="#"><img src="~/Content/img/pd/m2.png"></a>
                        <a href="#"><img src="~/Content/img/pd/m2.png"></a>
                    </div>
                </li>
                <li class="clearfix">
                    <div style="padding-left:85px;">最多可以增加<i class="reds">3</i>张</div>
                </li>*@
            </ul>
        </div>
        }
        }
        <div class="member-class clearfix">
            <ul>
                @for (int i = 0; i < Model.CommentList.Count(); i++)
                {
                    <li class="clearfix">
                        <div class="sp1">
                            <span class="gr1"><a href="#"><img width="60" height="60" about="" title="" src="@Model.CommentList[i].Product.Url"></a></span>
                            <span class="gr2"><a href="#">@Model.CommentList[i].Product.ProductName</a></span>
                            @*<span class="gr3">X @Model.CommentList[i].</span>*@
                        </div>
                        <div class="sp2">@Model.CommentList[i].CommentDate</div>
                        <div class="sp3"><label>@Model.CommentList[i].Comments</label></div>
                    </li>
                }
            </ul>
        </div>
        <div class="member-pages clearfix">
            <div class="fr pc-search-g">
                <a class="fl pc-search-f" href="#">上一页</a>
                <a href="#" class="current">1</a>
                <a href="javascript:;">2</a>
                <a href="javascript:;">3</a>
                <a href="javascript:;">4</a>
                <a href="javascript:;">5</a>
                <a href="javascript:;">6</a>
                <a href="javascript:;">7</a>
                <span class="pc-search-di">…</span>
                <a title="使用方向键右键也可翻到下一页哦！" class="pc-search-n" href="javascript:;" onClick="SEARCH.page(3, true)">下一页</a>
                <span class="pc-search-y">
                    <em>  共20页    到第</em>
                    <input type="text" class="pc-search-j" placeholder="1">
                    <em>页</em>
                    <a href="#" class="confirm">确定</a>
                </span>
            </div>
        </div>
    </div>
</div>

